<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.stockm8.mapper.BusinessMapper">

    <!-- ResultMap 정의 -->
    <resultMap id="businessResultMap" type="com.stockm8.domain.vo.BusinessVO">
        <id property="businessId" column="business_id" />
        <result property="businessNumber" column="business_number" />
        <result property="companyName" column="company_name" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <!-- 비즈니스 등록 -->
    <insert id="insertBusiness" parameterType="com.stockm8.domain.vo.BusinessVO">
        INSERT INTO test_businesses (business_number, company_name, created_at, updated_at)
        VALUES (#{businessNumber}, #{companyName}, NOW(), NOW())
    </insert>

    <!-- 비즈니스 정보 조회 -->
    <select id="getBusinessById" resultMap="businessResultMap" parameterType="int">
        SELECT * FROM test_businesses WHERE business_id = #{businessId}
    </select>

    <!-- 모든 비즈니스 목록 조회 -->
    <select id="getAllBusinesses" resultMap="businessResultMap">
        SELECT * FROM test_businesses
    </select>


</mapper>