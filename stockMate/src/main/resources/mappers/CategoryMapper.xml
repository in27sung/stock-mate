<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.stockm8.mapper.CategoryMapper">

    <!-- 카테고리 등록 -->
    <insert id="insertCategory" parameterType="com.stockm8.domain.CategoryVO">
        insert into categories (parentId, businessId, categoryName, level, createdAt)
        values (#{parentId}, #{businessId}, #{categoryName}, #{level}, #{createdAt});
    </insert>

    <!-- 카테고리 목록 조회 -->
    <select id="selectAllCategories" resultType="com.stockm8.domain.CategoryVO">
        select * 
        from categories;
    </select>


</mapper>
    